<%- include("partials/header.ejs") %>

<!-- On amis les catégories dans le header, reste à
   mettre les sujets principaux dans l'accueil ? -->

<div class="profile__container">

  <h1 class="profile__title">Mon Profil</h1>

  <div class="profile__forms">
    <div class="profile__formContainer">

      <div class="profile__formContainer__titleRow">
        <div class="profile__formContainer__titleRow__name">Pseudo</div>
        <div class="profile__formContainer__titleRow__actual"><%= userInfos.pseudo %></div>

        <div class="profile__formContainer__titleRow__modify">
          <i class="fas fa-pen"></i>Modifier
        </div>
      </div>

      <form action="/postProfile/pseudo" method="POST" class="profile__form">


        <div class="profile__form__inputRow">

          <label for="pseudo" class="profile__form__item">Nouveau pseudo</label>
          <input
          type="text"
          name="pseudo"
          class="profile__form__item"
          id="pseudo"
          placeholder="<%= userInfos.pseudo %>"
        />

      </div>
          <div class="profile__form__buttonRow">
            <button type="submit" class="profile__form__button">Modifier</button>
            <button type="button" class="profile__form__close">Annuler</button>
          </div>
      </form>
    </div>

    <div class="profile__formContainer">

      <div class="profile__formContainer__titleRow">
        <div class="profile__formContainer__titleRow__name">Mot de passe</div>
        <div class="profile__formContainer__titleRow__actual"></div>
        <div class="profile__formContainer__titleRow__modify">
          <i class="fas fa-pen"></i>Modifier
        </div>
      </div>

      <form action="/postProfile/password" method="POST" class="profile__form">

        <div class="profile__form__inputRow">

          <label for="password1" class="profile__form__item">Nouveau mot de passe</label>
          <input
        type="password"
        name="password1"
        class="profile__form__item"
        id="password1"
        placeholder="Nouveau mot de passe"
      />

      </div>

          <div class="profile__form__inputRow">

            <label for="password2" class="profile__form__item">Confirmer le mot de passe</label>
            <input
        type="password"
        name="password2"
        class="profile__form__item"
        id="password2"
        <%# placeholder="Répétez le mot de passe" %>
      />

      </div>
            <div class="profile__form__buttonRow">
              <button type="submit" class="profile__form__button">Modifier</button>
              <button type="button" class="profile__form__close">Annuler</button>
            </div>
      </form>
    </div>

    <div class="profile__formContainer">

      <div class="profile__formContainer__titleRow">
        <div class="profile__formContainer__titleRow__name">Email</div>
        <div class="profile__formContainer__titleRow__actual"><%= userInfos.email %></div>
        <div class="profile__formContainer__titleRow__modify">
          <i class="fas fa-pen"></i>Modifier
        </div>
      </div>

      <form action="/postProfile/email" method="POST" class="profile__form">

        <div class="profile__form__inputRow">
          <label for="email1" class="profile__form__item">Nouvel email</label>
          <input
        type="email"
        name="email1"
        class="profile__form__item"
        id="email1"
        placeholder="<%= userInfos.email %>"
      />

      </div>

          <div class="profile__form__inputRow">
            <label for="email2" class="profile__form__item">Confirmer le nouvel e-mail</label>
            <input
        type="email"
        name="email2"
        class="profile__form__item"
        id="email2"
        <%#placeholder="Répétez l'e-mail" %>
      />

      </div>

            <div class="profile__form__buttonRow">
              <button type="submit" class="profile__form__button">Modifier</button>
              <button type="button" class="profile__form__close">Annuler</button>
            </div>

      </form>
    </div>
  </div>
</div>

<%- include("partials/footer.ejs") %>
