<%- include("partials/header.ejs") %>

<!-- On amis les catégories dans le header, reste à
   mettre les sujets principaux dans l'accueil ? -->

<div class="profile__formContainer">
  <form action="/postProfile/pseudo" method="POST" class="profile__form">
    <label for="pseudo" class="profile__form__item">Pseudo</label>
    <input
      type="text"
      name="pseudo"
      class="profile__form__item"
      id="pseudo"
      placeholder="<%= userInfos.pseudo %>"
    />
    <button type="submit" class="profile__form__button">Modifier mon pseudo</button>
  </form>
</div>

<div class="profile__formContainer">
  <form action="/postProfile/password" method="POST" class="profile__form">
    <label for="password1" class="profile__form__item">Mot de passe</label>
    <input
      type="password"
      name="password1"
      class="profile__form__item"
      id="password1"
      placeholder="Nouveau mot de passe"
    />

    <label for="password2" class="profile__form__item">Confirmer le mot de passe</label>
    <input
      type="password"
      name="password2"
      class="profile__form__item"
      id="password2"
      placeholder="Répétez le mot de passe"
    />
    <button type="submit" class="profile__form__button">Modifier mon mot de passe</button>
  </form>
</div>

<div class="profile__formContainer">
  <form action="/postProfile/email" method="POST" class="profile__form">
    <label for="email1" class="profile__form__item">E-mail</label>
    <input
      type="email"
      name="email1"
      class="profile__form__item"
      id="email1"
      placeholder="<%= userInfos.email %>"
    />

    <label for="email2" class="profile__form__item">Confirmer le nouvel e-mail</label>
    <input
      type="email"
      name="email2"
      class="profile__form__item"
      id="email2"
      placeholder="Répétez l'e-mail"
    />
    <button type="submit" class="profile__form__button">Modifier mon e-mail</button>
  </form>
</div>

<%- include("partials/footer.ejs") %>
