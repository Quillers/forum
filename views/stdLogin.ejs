<%- include("partials/header.ejs") %>

<!-- On amis les catégories dans le header, reste à
   mettre les sujets principaux dans l'accueil ? -->

<div class="stdLogin__container">
  <div class="stdLogin__formContainer">
    <form action="/postConnexion/stdLogin" method="POST" class="stdLogin__form">
      <label for="pseudo" class="stdLogin__form__item">Pseudo</label>
      <input
        type="text"
        name="pseudo"
        class="stdLogin__form__item"
        id="pseudo"
      />
      <label for="password" class="stdLogin__form__item">Mot de passe</label>
      <input
        type="password"
        name="password"
        class="stdLogin__form__item"
        id="password"
      />


      <div class="stdLogin__form__buttonRow">
        <button type="submit" class="stdLogin__form__item">Valider</button>
        <button type="button" class="stdLogin__form__item"
          ><a href="/connexion/createAccount">Créer un compte</a></button>
        <button type="button" class="stdLogin__form__item"
          ><a href="/connexion/lostPass">Réinitialiser mon mot de passe</a></button>
      </div>


    </form>
  </div>
</div>

