<div class="connexion__modale" id="createAccountModale">

  <div class="connexion__modale__container">

    <button class="connexion__modale__quit" id="quitCreateProfil"><img src="/assets/quit_cross.png"></button>

    <h1 class="connexion__modale__title">Sign Up</h1>

    <hr class="connexion__form__hr" />

    <div class="connexion__modale__form__container">

      <form action="/postConnexion/createAccount" method="POST" class="connexion__form">

        <div class="connexion__modale__form__row">
          <input
        type="text"
        name="first_name"
        class="connexion__form__input"
        id="first_name"
        placeholder="First name"
            />
          <input
        type="text"
        name="last_name"
        class="connexion__form__input"
        id="last_name"
        placeholder="Last name"
            />
      </div>

          <input
      type="email"
      name="email"
        class="connexion__form__input"
      id="email"
      placeholder="Email"
    />

          <input
      type="password"
      name="password_1"
        class="connexion__form__input"
        placeholder="Password"
      id="password_1"
    />

          <input
      type="password"
      name="password_2"
        class="connexion__form__input"
        placeholder="Password"
      id="password_2"
    />

          <button type="submit" class="connexion__button__connexion">Create Profil</button>
      </form>

    </div>
  </div>
</div>
